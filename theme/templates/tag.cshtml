@using System.Globalization;

<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <title>@Model.TagName</title>

  @Include("_head", Model)

  <style>
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
  </style>
</head>

<body>
  <header class="container">
    <div style="margin-top: 1.25rem">
      <a class="font-mono underline" href="/">cd ..</a>
    </div>
    <h1 class="font-sans text-black">#@Model.TagName</h1>
    <small class="text-light">共 @Model.Posts.Count 篇</small>
  </header>
  <main class="container" style="padding-top: 2rem;">
    <article>
      <ul>
        @foreach (var item in Model.Posts)
        {
          <li style="margin-top: 0.5rem; margin-bottom: 1.75rem;">
            <div style="margin-bottom: 5px;">
              <a class="text-black hover-red" style="font-size: 1.25rem;" href="@item.Pathname">@item.Title</a>
            </div>
            <div class="text-light">
              <span>@item.CreateTime.ToString("MMM d, yyyy", new CultureInfo("en-US"))</span>
              •
              <span>@item.TimeToRead</span>
            </div>
          </li>
        }
      </ul>
    </article>
  </main>

  @Include("_footer", Model)

</body>

</html>
